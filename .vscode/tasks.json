{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PHP Server",
            "type": "shell",
            "command": "php",
            "args": [
                "-S",
                "localhost:8000"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "php",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            }
        }
    ]
}